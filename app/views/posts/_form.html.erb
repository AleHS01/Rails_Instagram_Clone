<div class="col-xl-4 col-md-6 col-sm-8 col-10 mt-4" style="margin:auto; background-color: #f8f8f8; border-radius: 6px; padding: 15px;">
<h1>New post</h1>
<%= form_with(model: post) do |form| %>
  <div>
  <%invalid = post.errors.include?(:title)%>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control"%>

    <%if invalid%>
      <%= post.errors.full_messages_for(:title).join(" , ")%>
    <%end%>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :keywords, style: "display: block" %>
    <%= form.text_field :keywords, class:"form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary col-12 mt-3"%>
  </div>
<% end %>
</div>